<Window x:Class="DilanovaLanguage.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DilanovaLanguage"
        mc:Ignorable="d"
        Title="DilanovaLanguage" Height="450" Width="800" FontFamily="Comic Sans MS" Icon="Properties/school_logo.ico">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="75"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="30"/>
        </Grid.RowDefinitions>
        <TextBlock  Grid.Row="0" Grid.ColumnSpan="3" Background="#e7fabf"></TextBlock>
        <Image Source="/Properties/school_logo.ico" HorizontalAlignment="Left"></Image>
        <TextBlock Text="DilanovaLanguage" FontSize="30" HorizontalAlignment="Center" VerticalAlignment="Center"
                    ></TextBlock>

        <Frame Grid.Row="1" Name="MainFrame" NavigationUIVisibility="Hidden"></Frame>
    </Grid>
</Window>
